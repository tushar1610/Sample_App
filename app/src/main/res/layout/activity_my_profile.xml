<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attribute1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:id="@+id/user_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/attribute1"
                android:fontFamily="serif-monospace"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attribute2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textStyle="bold"
                android:padding="8dp"
                android:fontFamily="serif-monospace"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/user_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/attribute2"
                android:fontFamily="serif-monospace"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attribute3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:padding="8dp"
                android:fontFamily="serif-monospace"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/attribute3"
                android:fontFamily="serif-monospace"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attribute4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textStyle="bold"
                android:padding="8dp"
                android:fontFamily="serif-monospace"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/attribute4"
                android:fontFamily="serif-monospace" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attribute5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/attribute5"
                android:fontFamily="serif-monospace" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:text="Log Out"
            android:id="@+id/log_out"
            android:background="@android:color/holo_red_light"/>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_profile"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>